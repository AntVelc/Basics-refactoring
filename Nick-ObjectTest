class Service
    def initialize(service, password)
        @service = service
        @password = password
        @added_on = Time.now
        @updated_on = nil
    end

    attr_accessor 'service', 'password', 'added_on', 'updated_on'
end

facebook = Service.new 'Facebook', 'qwerty'
p facebook.service
p facebook.password
p facebook.added_on
p facebook.updated_on

facebook.password = 'qwerty123' #changes the password

p facebook.password
p facebook.added_on

amazon = Service.new 'amazon', 'pwrd123'

#Create an array of objects?
#E.g. 
@array_of_services = []
def add(service_name, service_password)
    @array_of_services << Service.new(service_name, service_password)
    p @array_of_services
end

add('MySpace', 'asdfg')
add('Netflix', 'strngrthings')
